<aside class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-zinc-200 transform transition-transform duration-300 ease-in-out"
       :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'"
       x-cloak>

    <div class="flex items-center justify-center h-16 border-b border-zinc-100">
        <a href="/Instructor/Dashboard" class="flex items-center gap-2">
            <div class="bg-zinc-900 text-white p-1.5 rounded-lg">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <span class="font-bold text-xl tracking-tight text-zinc-900">Sphere<span class="text-zinc-400">Teach</span></span>
        </a>
    </div>

    <nav class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">

        <p class="px-4 text-[11px] font-bold text-zinc-400 uppercase tracking-wider mb-2">Overview</p>

        <a asp-controller="Instructor" asp-action="Dashboard"
           class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg transition-colors group
                  @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "bg-zinc-100 text-zinc-900" : "text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900")">
            <i class="fas fa-chart-pie w-5 text-center mr-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "text-zinc-900" : "text-zinc-400")"></i>
            Dashboard
        </a>

        <div class="pt-6 pb-2">
            <p class="px-4 text-[11px] font-bold text-zinc-400 uppercase tracking-wider">Courses</p>
        </div>

        <a asp-controller="Instructor" asp-action="Dashboard"
           class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg transition-colors group text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900">
            <i class="fas fa-book w-5 text-center mr-3 text-zinc-400"></i>
            My Courses
        </a>

        <a asp-controller="Instructor" asp-action="Create"
           class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg transition-colors group
                  @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "bg-zinc-100 text-zinc-900" : "text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900")">
            <i class="fas fa-plus-circle w-5 text-center mr-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "text-zinc-900" : "text-zinc-400")"></i>
            Create Course
        </a>

    </nav>

    <div class="p-4 border-t border-zinc-200">
        <a asp-controller="Home" asp-action="Index" class="flex items-center px-4 py-3 text-sm font-medium text-zinc-600 rounded-lg hover:bg-zinc-100 hover:text-zinc-900 transition-colors border border-zinc-200 bg-zinc-50">
            <i class="fas fa-external-link-alt w-5 text-center mr-2"></i>
            Back to Website
        </a>
    </div>
</aside>
