@model List<BusinessLayer.Responses.Course.CourseResponse>
@{
    ViewData["Title"] = "Pending Courses";
    Layout = "_AdminLayout";
}

<partial name="_Notification" />

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-zinc-900">Pending Courses</h1>
            <p class="text-zinc-500 mt-1">Review and approve instructor submissions</p>
        </div>
        <a asp-action="Index" class="px-4 py-2 text-zinc-600 hover:text-zinc-900 font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="bg-white rounded-xl border border-zinc-200 p-12 text-center">
            <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-check text-emerald-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-medium text-zinc-900 mb-2">All caught up!</h3>
            <p class="text-zinc-500">No courses pending review</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl border border-zinc-200 overflow-hidden">
            <table class="w-full">
                <thead class="bg-zinc-50 border-b border-zinc-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase">Course</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase">Level</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase">Price</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-zinc-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-zinc-100">
                    @foreach (var course in Model)
                    {
                        <tr class="hover:bg-zinc-50" x-data="{ showReject: false }">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    @if (!string.IsNullOrEmpty(course.Image))
                                    {
                                        <img src="@course.Image" class="w-12 h-12 rounded-lg object-cover">
                                    }
                                    else
                                    {
                                        <div class="w-12 h-12 bg-zinc-200 rounded-lg flex items-center justify-center">
                                            <i class="fas fa-image text-zinc-400"></i>
                                        </div>
                                    }
                                    <div>
                                        <p class="font-medium text-zinc-900">@course.Title</p>
                                        <p class="text-sm text-zinc-500 line-clamp-1">@course.Description</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-100 text-zinc-700">@course.Level</span>
                            </td>
                            <td class="px-6 py-4">
                                @if (course.Price == 0)
                                {
                                    <span class="text-emerald-600 font-medium">Free</span>
                                }
                                else
                                {
                                    <span class="text-zinc-900">$@course.Price.ToString("N0")</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-end gap-2" x-data="{ approving: false, rejecting: false }">
                                    <form asp-action="ApproveCourse" method="post" class="inline" x-on:submit="approving = true">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@course.CourseId" />
                                        <button type="submit" :disabled="approving" class="px-3 py-1.5 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 text-sm font-medium disabled:opacity-50 disabled:cursor-not-allowed inline-flex items-center gap-1.5">
                                            <template x-if="!approving">
                                                <span><i class="fas fa-check mr-1"></i>Approve</span>
                                            </template>
                                            <template x-if="approving">
                                                <span><i class="fas fa-spinner fa-spin mr-1"></i>Approving...</span>
                                            </template>
                                        </button>
                                    </form>
                                    <button x-on:click="showReject = !showReject" :disabled="approving" class="px-3 py-1.5 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 text-sm font-medium disabled:opacity-50">
                                        <i class="fas fa-times mr-1"></i>Reject
                                    </button>
                                </div>
                                <div x-show="showReject" x-cloak class="mt-3" x-data="{ rejecting: false }">
                                    <form asp-action="RejectCourse" method="post" class="flex gap-2" x-on:submit="rejecting = true">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@course.CourseId" />
                                        <input type="text" name="reason" placeholder="Reason for rejection..." class="flex-1 px-3 py-1.5 border border-zinc-300 rounded-lg text-sm" required :disabled="rejecting">
                                        <button type="submit" :disabled="rejecting" class="px-3 py-1.5 bg-red-600 text-white rounded-lg hover:bg-red-700 text-sm disabled:opacity-50 disabled:cursor-not-allowed inline-flex items-center gap-1.5">
                                            <template x-if="!rejecting">
                                                <span>Confirm</span>
                                            </template>
                                            <template x-if="rejecting">
                                                <span><i class="fas fa-spinner fa-spin mr-1"></i>Rejecting...</span>
                                            </template>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
