@model List<BusinessLayer.Responses.Course.CourseResponse>
@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "_AdminLayout";
    var courses = Model ?? new List<BusinessLayer.Responses.Course.CourseResponse>();
    var draftCount = 0;
    var pendingCount = 0;
    var publishedCount = 0;
}

<partial name="_Notification" />

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-zinc-900">My Courses</h1>
            <p class="text-zinc-500 mt-1">Manage your courses and track student enrollments</p>
        </div>
        <a asp-action="Create" class="inline-flex items-center gap-2 px-4 py-2.5 bg-zinc-900 text-white rounded-lg hover:bg-zinc-800 transition-colors font-medium text-sm">
            <i class="fas fa-plus"></i>
            Create Course
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl border border-zinc-200 p-5">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-zinc-100 rounded-lg">
                    <i class="fas fa-book text-zinc-600 text-lg"></i>
                </div>
                <div>
                    <p class="text-2xl font-bold text-zinc-900">@courses.Count</p>
                    <p class="text-sm text-zinc-500">Total Courses</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl border border-zinc-200 p-5">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-amber-100 rounded-lg">
                    <i class="fas fa-clock text-amber-600 text-lg"></i>
                </div>
                <div>
                    <p class="text-2xl font-bold text-zinc-900">@pendingCount</p>
                    <p class="text-sm text-zinc-500">Pending Review</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl border border-zinc-200 p-5">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-emerald-100 rounded-lg">
                    <i class="fas fa-check-circle text-emerald-600 text-lg"></i>
                </div>
                <div>
                    <p class="text-2xl font-bold text-zinc-900">@publishedCount</p>
                    <p class="text-sm text-zinc-500">Published</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Course List -->
    <div class="bg-white rounded-xl border border-zinc-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-zinc-100">
            <h2 class="font-semibold text-zinc-900">All Courses</h2>
        </div>

        @if (courses.Count == 0)
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 bg-zinc-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-book-open text-zinc-400 text-2xl"></i>
                </div>
                <h3 class="text-lg font-medium text-zinc-900 mb-2">No courses yet</h3>
                <p class="text-zinc-500 mb-4">Get started by creating your first course</p>
                <a asp-action="Create" class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-900 text-white rounded-lg hover:bg-zinc-800 transition-colors text-sm font-medium">
                    <i class="fas fa-plus"></i>
                    Create Course
                </a>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-zinc-50 border-b border-zinc-100">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase tracking-wider">Course</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase tracking-wider">Level</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase tracking-wider">Price</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-zinc-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-zinc-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100">
                        @foreach (var course in courses)
                        {
                            <tr class="hover:bg-zinc-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(course.Image))
                                        {
                                            <img src="@course.Image" alt="@course.Title" class="w-12 h-12 rounded-lg object-cover">
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 bg-zinc-200 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-image text-zinc-400"></i>
                                            </div>
                                        }
                                        <div>
                                            <p class="font-medium text-zinc-900">@course.Title</p>
                                            <p class="text-sm text-zinc-500 line-clamp-1">@course.Description</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-100 text-zinc-700">
                                        @course.Level
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (course.Price == 0)
                                    {
                                        <span class="text-emerald-600 font-medium">Free</span>
                                    }
                                    else
                                    {
                                        <span class="text-zinc-900 font-medium">$@course.Price.ToString("N0")</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-100 text-zinc-600">
                                        Draft
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@course.CourseId" class="p-2 text-zinc-500 hover:text-zinc-900 hover:bg-zinc-100 rounded-lg transition-colors" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="SubmitForReview" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@course.CourseId" />
                                            <button type="submit" class="p-2 text-zinc-500 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition-colors" title="Submit for Review">
                                                <i class="fas fa-paper-plane"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
