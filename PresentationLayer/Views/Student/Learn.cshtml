@model BusinessLayer.Responses.Course.CourseResponse
@using System.Text.Json
@{ ViewData["Title"] = Model.Title; Layout = "_Layout";
   var modules = ViewBag.Modules as List<BusinessLayer.Responses.Module.ModuleResponse> ?? new();
   var jsonOptions = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
   var modulesJson = JsonSerializer.Serialize(modules, jsonOptions);
}

<div class="flex h-screen" x-data="learnPage()">
    <!-- Sidebar -->
    <div class="w-80 bg-white border-r border-zinc-200 overflow-y-auto">
        <div class="p-4 border-b border-zinc-200">
            <a asp-action="Index" class="text-zinc-500 hover:text-zinc-900 text-sm"><i class="fas fa-arrow-left mr-2"></i>Back to My Courses</a>
            <h2 class="font-semibold text-zinc-900 mt-2">@Model.Title</h2>
        </div>
        <div class="p-4">
            @if (modules.Count == 0)
            { <p class="text-zinc-500 text-sm">No modules yet</p> }
            else
            {
                @foreach (var module in modules.OrderBy(m => m.Index))
                {
                    <div class="mb-4">
                        <h3 class="font-medium text-zinc-900 text-sm mb-2">@module.Index. @module.Name</h3>
                        @if (module.Lessons?.Any() == true)
                        {
                            <ul class="space-y-1">
                                @foreach (var lesson in module.Lessons.OrderBy(l => l.OrderIndex))
                                {
                                    <li>
                                        <button x-on:click="selectLesson('@lesson.LessonId')"
                                                x-bind:class="selectedLessonId === '@lesson.LessonId' ? 'bg-emerald-50 text-emerald-700' : 'text-zinc-600 hover:bg-zinc-100'"
                                                class="w-full text-left px-3 py-2 text-sm rounded-lg flex items-center gap-2 transition-colors">
                                            <i class="fas fa-play-circle" x-bind:class="selectedLessonId === '@lesson.LessonId' ? 'text-emerald-500' : 'text-zinc-400'"></i>
                                            @lesson.Title
                                        </button>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                }
            }
        </div>
    </div>

    <!-- Content -->
    <div class="flex-1 bg-zinc-50 p-8 overflow-y-auto">
        <div class="max-w-3xl mx-auto">
            <template x-if="!selectedLesson">
                <div class="bg-white rounded-xl border border-zinc-200 p-8 text-center">
                    <i class="fas fa-play-circle text-5xl text-zinc-300 mb-4"></i>
                    <h3 class="text-lg font-medium text-zinc-900 mb-2">Select a lesson</h3>
                    <p class="text-zinc-500">Choose a lesson from the sidebar to start learning</p>
                </div>
            </template>
            <template x-if="selectedLesson">
                <div class="bg-white rounded-xl border border-zinc-200 p-8">
                    <h1 class="text-2xl font-bold text-zinc-900 mb-4" x-text="selectedLesson.title"></h1>
                    <div class="flex items-center gap-4 text-sm text-zinc-500 mb-6">
                        <span><i class="fas fa-clock mr-1"></i><span x-text="selectedLesson.estimatedMinutes"></span> min</span>
                        <template x-if="selectedLesson.isGraded">
                            <span class="text-amber-600"><i class="fas fa-star mr-1"></i>Graded</span>
                        </template>
                    </div>
                    <div class="prose max-w-none" x-html="selectedLesson.content || '<p class=\'text-zinc-500\'>No content available for this lesson.</p>'"></div>
                </div>
            </template>
        </div>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('learnPage', () => ({
        modules: @Html.Raw(modulesJson),
        selectedLessonId: null,
        selectedLesson: null,
        selectLesson(lessonId) {
            this.selectedLessonId = lessonId;
            for (const mod of this.modules) {
                const lesson = mod.lessons?.find(l => l.lessonId === lessonId);
                if (lesson) {
                    this.selectedLesson = lesson;
                    break;
                }
            }
        }
    }));
});
</script>
