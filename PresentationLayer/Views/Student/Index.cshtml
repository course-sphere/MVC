@model List<BusinessLayer.Responses.Course.CourseResponse>
@{ ViewData["Title"] = "My Courses"; Layout = "_Layout"; }

<partial name="_Notification" />

<div class="max-w-6xl mx-auto py-8 px-4">
    <h1 class="text-2xl font-bold text-zinc-900 mb-6">My Courses</h1>

    @if (Model.Count == 0)
    {
        <div class="bg-white rounded-xl border border-zinc-200 p-12 text-center">
            <i class="fas fa-book-open text-4xl text-zinc-300 mb-4"></i>
            <h3 class="text-lg font-medium text-zinc-900 mb-2">No courses yet</h3>
            <p class="text-zinc-500 mb-4">Start learning by enrolling in a course</p>
            <a asp-action="Browse" class="px-4 py-2 bg-zinc-900 text-white rounded-lg hover:bg-zinc-800">Browse Courses</a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            @foreach (var course in Model)
            {
                <div class="bg-white rounded-xl border border-zinc-200 overflow-hidden hover:shadow-lg transition-shadow">
                    @if (!string.IsNullOrEmpty(course.Image))
                    { <img src="@course.Image" class="w-full h-40 object-cover"> }
                    else
                    { <div class="w-full h-40 bg-zinc-200 flex items-center justify-center"><i class="fas fa-image text-zinc-400 text-3xl"></i></div> }
                    <div class="p-4">
                        <h3 class="font-semibold text-zinc-900 mb-1">@course.Title</h3>
                        <p class="text-sm text-zinc-500 line-clamp-2 mb-3">@course.Description</p>
                        <a asp-action="Learn" asp-route-id="@course.CourseId" class="w-full block text-center px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 text-sm font-medium">Continue Learning</a>
                    </div>
                </div>
            }
        </div>
    }
</div>
